<Window x:Class="Lift.ParametersErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command line parameters error" Height="250" Width="690"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Topmost="True"
        FontWeight="Bold"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="commandTextBlock" 
                   Margin="10, 10, 10, 10"
                   Grid.Row="0"
                   />

        <TextBlock x:Name="describeTextBlock" 
                   Grid.Row="1"
                   Margin="10, 0, 10, 0"
                   />

        <Button Grid.Row="2"
                Content="Close"
                Width="60"
                IsCancel="True" 
                IsDefault="True" 
                Margin="0, 10, 0, 10"
                />

    </Grid>
</Window>
